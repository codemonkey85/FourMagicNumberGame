<h3>Pick a number.</h3>
<label for="numberChooser">Number: </label>
<input type="number" id="numberChooser" min="0" @bind="numberChosen" />
@if (numberChosen != null)
{
    <label class="number-as-words">@NumbersToWords.ConvertToWords(numberChosen ?? 0)</label>
}

<br />

<button type="button" class="btn btn-primary" @onclick="DoTheMagic">Do The Magic</button>

@if (outputLines?.Any() ?? false)
{
    @foreach (string line in outputLines)
    {
        <br />
        @line
    }
    <br />
    <label>Four is the magic number.</label>
}
