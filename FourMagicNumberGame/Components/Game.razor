<h3>Pick a number.</h3>
<label for="numberChooser">Number: </label>
<input type="number" id="numberChooser" min="0" @bind="_numberChosen" />
@if (_numberChosen != null)
{
    <label class="number-as-words">@NumbersToWords.ConvertToWords(_numberChosen ?? 0)</label>
}

<br />

<button type="button" class="btn btn-primary" @onclick="DoTheMagic">Do The Magic</button>

@if (_outputLines?.Any() ?? false)
{
    @foreach (var line in _outputLines)
    {
        <br />
        @line
    }
    <br />
    <label>Four is the magic number.</label>
}
