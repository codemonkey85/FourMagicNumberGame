<MudNumericField @bind-Value="@_numberChosen"
                 Label="Pick a number"
                 Min="0"
                 Class="mt-3 align-self-start"
                 Variant="@Variant.Outlined" />

@if (_numberChosen != null)
{
    <MudText Class="ma-1" Align="Align.Left">
        @NumbersToWords.ConvertToWords(_numberChosen ?? 0)
    </MudText>
}

<MudStack Spacing="1">
    <MudButton OnClick="@DoTheMagic"
               Variant="@Variant.Filled"
               Color="@Color.Primary"
               Class="align-self-start">
        Do The Magic
    </MudButton>

    @if (_outputLines?.Any() ?? false)
    {
        @foreach (var line in _outputLines)
        {
            <MudText>
                @line
            </MudText>
        }
        <MudText>
            Four is the magic number!
        </MudText>
    }
</MudStack>
